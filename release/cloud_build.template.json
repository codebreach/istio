{
  "steps": [
    {
      "volumes": [
	{
          "name": "buildoutput",
          "path": "/output"
	}
      ],
      "name": "gcr.io/istio-testing/istio-builder:0.5.7",
      "args": [ "-c", "git clone https://github.com/istio/global-build && global-build/prow/new_green_build.sh -b \"$_BRANCH\" -r \"$_GCS_RELEASE_TOOLS_PATH\" " ],
      "entrypoint": "bash"
    },
    {
      "volumes": [
	{
          "name": "buildoutput",
          "path": "/output"
	}
      ],
      "name": "gcr.io/istio-testing/istio-builder:0.5.7",
      "dir": "go/src/istio.io/istio",
      "args": [ "./release/cloud_builder.sh", "-p", "$_GCS_PATH", "-q", "$_GCR_PATH", "-t", "$_VER_STRING", "-o", "/output" ]
    },
    {
      "volumes": [
        {
          "name": "buildoutput",
          "path": "/output"
        }
      ],
      "name": "gcr.io/istio-testing/istio-builder:0.5.7",
      "dir": "go/src/istio.io/istio",
      "args": [ "./release/store_artifacts.sh", "-p", "$_GCS_PATH", "-q", "$_GCR_PATH", "-v", "$_VER_STRING", "-o", "/output" ]
    }
  ],
  "options": {
    "machineType": "N1_HIGHCPU_8"
  },
  "timeout": "3600s",
}
